/*============================================================================
  #Breakpoints
==============================================================================*/
$xs-max: 544px;
$sm-min: $xs-max + 1;
$sm-max: 767px;
$md-min: $sm-max + 1;
$md-max: 991px;
$lg-min: $md-max + 1;
$lg-max: 1199px;
$xl-min: $lg-max + 1;
/*============================================================================
  #Typography
==============================================================================*/
$font-family-default:        {{ settings.font_family }};
$font-family-heading:        {{ settings.heading_font_family }};
/*============================================================================
  #Colors
==============================================================================*/
$color-primary:              {{ settings.color_primary }};
$color-offset:               #faf9f7;

html, body {
  height: 100%;
  background: $color-offset;
}

body {
  font-family: $font-family-default;
  color: #222;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font-family-heading;
}

a {
  color: $color-primary;
  &:hover {
    color: darken($color-primary, 20%);
    text-decoration: none;
  }
}

.footer {
  background: #fff;
  padding: 20px 0;
  border-top: 1px solid $color-offset;
  img {
    height: 40px;
  }
  a {
    margin-right: 20px;
    font-weight: 600;
  }
}

.header {
  background: #fff;
  padding: 20px 0;
  border-bottom: 1px solid $color-offset;
  img {
    height: 40px;
  }
  a {
    margin-right: 20px;
    font-weight: 600;
  }
  .dropdown {
    &-menu {
      left: auto !important;
      right: 0;
    }
    img {
      border-radius: 50%;
    }
    a {
      display: block;
      padding: 5px 15px;
      margin-right: 0;
      font-size: 14px;
    }
  }
}

.powered-by {
  background: $color-offset;
  padding: 15px;
  text-align: center;
  font-size: 14px;
  a {
    color: #222;
  }
}
